# Python OMR Checker Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false
WORKERS=2
FLASK_ENV=production
PYTHONUNBUFFERED=1

# Processing Configuration
MAX_FILE_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
DEBUG_OUTPUT_FOLDER=debug_output
LOG_FOLDER=logs

# Image Processing Settings
DEFAULT_DPI=300
MIN_IMAGE_WIDTH=800
MIN_IMAGE_HEIGHT=1000
MAX_IMAGE_WIDTH=4000
MAX_IMAGE_HEIGHT=6000

# OMR Detection Thresholds
BUBBLE_DETECTION_THRESHOLD=0.4
ALIGNMENT_MARK_THRESHOLD=0.6
MIN_ALIGNMENT_MARKS=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/omr_processor.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Performance Settings
PROCESSING_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_REQUESTS=10
TIMEOUT=300
MAX_REQUESTS=1000

# Security Settings
ALLOWED_EXTENSIONS=png,jpg,jpeg,tiff,bmp
SECURE_FILENAME=true

# CORS Settings
CORS_ORIGINS=*

# OpenCV Settings
OPENCV_LOG_LEVEL=ERROR

# Integration Settings
API_KEY=your_api_key_here
WEBHOOK_URL=http://localhost:3000/api/omr/webhook

# Render.com Production Settings
# These will be set as environment variables in Render dashboard
# PYTHON_OMR_URL=https://ultra-precision-python-omr.onrender.com