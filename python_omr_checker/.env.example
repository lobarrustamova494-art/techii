# Python OMR Checker Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false
WORKERS=1

# Processing Configuration
MAX_FILE_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
DEBUG_OUTPUT_FOLDER=debug_output

# Image Processing Settings
DEFAULT_DPI=300
MIN_IMAGE_WIDTH=800
MIN_IMAGE_HEIGHT=1000
MAX_IMAGE_WIDTH=4000
MAX_IMAGE_HEIGHT=6000

# OMR Detection Thresholds
BUBBLE_DETECTION_THRESHOLD=0.4
ALIGNMENT_MARK_THRESHOLD=0.6
MIN_ALIGNMENT_MARKS=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/omr_processor.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Performance Settings
PROCESSING_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_REQUESTS=10

# Security Settings
ALLOWED_EXTENSIONS=png,jpg,jpeg,tiff,bmp
SECURE_FILENAME=true

# Integration Settings
API_KEY=your_api_key_here
WEBHOOK_URL=http://localhost:3000/api/omr/webhook